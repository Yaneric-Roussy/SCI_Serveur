@model Super_Cartes_Infinies.Models.Card

@{
    ViewData["Title"] = "CreateStartingCard";
}

<h1>Ajouter aux cartes de départ</h1>

<h3>Êtes-vous certain de vouloir ajouter cette carte aux cartes de départ?</h3>
<div>
    <h4>Carte</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Attack)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attack)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Health)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Health)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="Image" height="100px" />
        </dd>
    </dl>
    
    <form asp-action="CreateStartingCard">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ajouter" class="btn btn-danger" /> |
        <a asp-controller="StartingCards" asp-action="Index">Retour à la liste</a>
    </form>
</div>
